@model  SimpleStoreApplication.Models.ProductViewModel

@{
    ViewBag.Title = "Index";
    int count = 0;
}

<h2>Index </h2>
<h3>Sayfa: @ViewBag.Page</h3>


<div class="container">
    <div class="row">

        @foreach (var item in Model.Products)
        {

            if (count != 0 && count % 4 == 0)
            {
            @:</div>
            @:<div class="row">
            }

            @Html.Partial("_ProductSummary", item)

            count++;
        }
    </div>

    @* @Html.Paginate(x=>) *@
    @Html.Pagination(Model.PageInfo, x => Url.Action("Index", new { page = x }))


